<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{mm:ss,SSS} %-5p %30.30c - %m%n"/>
    </Console>
    <RollingFile name="RollingFile" fileName="log4j2.log"
                 filePattern="log4j2-%d{yyyy-MM-dd-HH}-%i.log.gz">
      <PatternLayout>
        <Pattern>%d{mm:ss,SSS} %-5p %30.30c - %m%n</Pattern>
      </PatternLayout>
      <Policies>
        <TimeBasedTriggeringPolicy />
        <SizeBasedTriggeringPolicy size="1 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10"/>
    </RollingFile>    
  </Appenders>
  	<logger name="org">
    	<level value="off"/>
	</logger>
	<logger name="com">
    	<level value="off"/>
	</logger>
  <Loggers>
    <Logger name="de.malime.math.komplexionen" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="RollingFile"/>
    </Root>
  </Loggers>
</Configuration>